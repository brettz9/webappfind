{
    "manifest_version": 2,

    "name": "webappfind",
    "version": "3.0.0",
    "author": "Brett Zamir",
    "homepage_url": "https://github.com/brettz9/webappfind",
    "description": "Open desktop files into web apps",

    "icons": {
        "48": "icons/icon48.png",
        "96": "icons/icon96.png"
    },

    "background": {
        "scripts": [
            "browser-polyfill.js",
            "background.js"
        ]
    },

    "applications": {
        "gecko": {
            "id": "webappfind@brett-zamir.me",
            "strict_min_version": "54.0"
        }
    },

    "permissions": ["nativeMessaging"]
}
